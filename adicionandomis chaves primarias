import mysql.connector
con = mysql.connector.connect(host='localhost',database='processos',user='root',password='')
if con.cursor():
    db_info = con.get_server_info()
    print("conectado ao servidor MySql versão ",db_info)
    cursor = con.cursor()
    cursor.execute("select database();")
    linha = cursor.fetchone()
    print('conectado ao Banco de dados', linha)
    sql= ('alter table acao primary key(codigo)');  
    cursor.execute(sql)
    sql= ('alter table recla add primary key(processo, junta, cidade, nrecla)'); #chave primaria composta
    cursor.execute(sql)
    if con.is_connected():
      cursor.close()
      con.close()
      print("conexão ao MySql foi encerrada")




